{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "baseUrl": ".",
    "checkJs": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/src/**/*.d.ts",
    "src/src/**/*.ts",
    "src/src/**/*.svelte"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
